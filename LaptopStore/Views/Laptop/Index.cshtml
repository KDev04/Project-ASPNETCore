@model List<Laptop>

@{
    ViewData["Title"] = "Home Page";
}

@* <section class="container py-5">
    <partial name="~/Views/Laptop/Filter.cshtml" />
</section> *@


<section class="container py-5 my-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successMessage" class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <div class="row gy-2">
        <div class="col-2">
            <partial name="~/Views/Laptop/DanhMuc.cshtml" />
        </div>
        <div class="col-10">
            <div class="container">
                <div class="row row-cols-4">
                    @foreach (var laptop in Model)
                    {
                        <partial name="LaptopSummary.cshtml" model="laptop" />
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Sử dụng JavaScript để tự động ẩn thông báo thành công sau 2 giây
    $(document).ready(function () {
        setTimeout(function () {
            $('#successMessage').fadeOut('slow');
        }, 2000); // 2 giây
    });
</script>