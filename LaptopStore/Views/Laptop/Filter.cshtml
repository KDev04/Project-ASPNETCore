<form asp-action="Filter" asp-controller="Laptop" method="post">
    <div class="row" id="collapseExample">
        <div class="col-md-3">
            <div class="form-group">
                <label for="name">Tên laptop:</label>
                <input type="text" name="name" id="name" class="form-control" value="PREDATOR" />
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="from">Giá từ:</label>
                <input type="number" name="from" id="from" class="form-control" value="1" />
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="to">Giá đến:</label>
                <input type="number" name="to" id="to" class="form-control" value="20000" />
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label for="sortBy">Sắp xếp theo:</label>
                <select name="sortBy" id="sortBy" class="form-control">
                    <option value="TenLaptop_asc">Tên tăng dần</option>
                    <option value="TenLaptop_desc">Tên giảm dần</option>
                    <option value="Gia_asc">Giá tăng dần</option>
                    <option value="Gia_desc">Giá giảm dần</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="sortBy" class="text-white">Sắp xếp theo:</label>
                <button type="submit" class="btn btn-primary form-control">Lọc</button>
            </div>
        </div>
    </div>
</form>