    <div class="row justify-content-center text-white">
        <div class="col-md-8">
            <div class="d-flex align-items-center special-bar p-2 rounded">
                <div class="bar-item mx-2"><i class="fa-brands fa-gg me-2" style="color: #E80104;"></i>Cam kết giá tốt
                    nhất</div>
                <div class="bar-item mx-2"><i class="fa-solid fa-truck-fast me-2" style="color: #E80104;"></i>Miễn phí
                    vận chuyển</div>
                <div class="bar-item mx-2"><i class="fa-solid fa-hand-holding-dollar me-2"
                        style="color: #E80104;"></i>Thanh toán khi nhận hàng</div>
                <div class="bar-item mx-2"><i class="fa-solid fa-repeat me-2" style="color: #E80104;"></i>Đổi trả trong
                    7 ngày</div>
            </div>
        </div>
    </div>
</div>

<section class="container ">
    <div class="container bg-light rounded-5 p-5">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mb-4">
                                <div class="image-container" style="overflow: hidden; margin-top: 10px;">
                                    <img src=http://localhost:4000/@Model.ImgPath alt="img"
                                        class="img-fluid rounded img-card" />
                                </div>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col text-center">
                                <h3 class="fw-bold">@Model.Name</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">@Model.Price
                <div class="card text-black">
                    <div class="card-body">
                        <h6 class=" pb-2 border-bottom fw-bold">Thông tin sản phẩm</h6>
                        <div class="row">
                            <div class="col-md-6 col-sm-12 col-lg-12 mb-3">
                                <pre> <h6 id="productDescription">@Model.Description</h6></pre>
                                <a href="" class="text-decoration-none text-warning">Xem thêm <i
                                        class="fa-solid fa-angles-down"></i></a>
                            </div>
                        </div>
                        <div class="row">
                            <h6 class=" pb-2 border-bottom fw-bold">Màu sắc</h6>
                            <div class="col-md-6 col-sm-12 col-lg-12 mb-3">
                                <button class="btn border">
                                    @Model.Color
                                </button>
                            </div>
                        </div>

                        <div class="">
                            <h6 class=" pb-2 border-bottom fw-bold">Giá gốc [Đã gồm VAT]</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <h3 class="text-black-50" style=" text-decoration : line-through;">
                                        @Model.BigPrice <i class="fa-solid fa-dollar-sign"></i>
                                    </h3>

                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <h6 class="mb-2 pb-2 border-bottom fw-bold">Giá khuyến mãi</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <h3 style="color: #E80104;">
                                        @Model.Price <i class="fa-solid fa-dollar-sign"></i>
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <form asp-action="AddToCart" asp-controller="Cart" method="post"
                                enctype="multipart/form-data">
                                <input type="hidden" name="UserId" value="eb991811-c293-41ab-9ead-08fd4a46b03c" />
                                <input type="hidden" name="LaptopId" value="@Model.LaptopId" />
                                <input type="hidden" name="Quantity" value="1" />
                                <button class="btn btn-success ms-2" type="submit" title="Thêm vào giỏ hàng">
                                    <i class="fa-solid fa-cart-plus"></i>
                                </button>
                            </form>
                            <a href="#" class="btn ms-2" onclick="toggleIcon(event)" style="background-color: #ffd1d1;" title="Yêu thích">
                                <i id="heartIcon" class="fa-regular fa-heart" data-state="regular"
                                    style="color: #74C0FC;"></i>
                            </a>

                            <script>
                                function toggleIcon(event) {
                                    event.preventDefault();
                                    var heartIcon = document.getElementById('heartIcon');
                                    var currentState = heartIcon.getAttribute('data-state');

                                    if (currentState === 'regular') {
                                        heartIcon.className = 'fa-solid fa-heart';
                                        heartIcon.setAttribute('data-state', 'solid');
                                    } else {
                                        heartIcon.className = 'fa-regular fa-heart';
                                        heartIcon.setAttribute('data-state', 'regular');
                                    }
                                }
                            </script>
                            <button class="btn btn-warning ms-2" title="Mua ngay">
                                <i class="fa-regular fa-credit-card" ></i> 
                            </button>
                        </div>

