@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - Settings - Category";
}
<div class="" id="main" style="position: absolute;">

    <section>
        <form class="my-3">
            <div class="row">
                <div class="col-7">
                    <input class="form-control" type="search" id="SearchLabel" placeholder="Tìm kiếm">
                </div>
                <div class="col-1">
                    <a class="btn btn-outline-secondary" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                </div>


            </div>

        </form>

        <!-- Modal button -->
        <div class="row my-3">
            <div class="col ">
                <a class="btn btn-outline-secondary text-uppercase" data-bs-toggle="modal" data-bs-target="#modal1">
                    <i class="fa-solid fa-circle-plus" style="color: #74C0FC;"></i> Tạo danh mục
                </a>
            </div>
        </div>

        <!-- Modal nhập  -->
        <div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                            Tạo danh mục 
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body ">
                        <form action="SaveProduct" method="post" enctype="multipart/form-data" class="form-inline">

                            <div class="row row-cols-2 mb-3">
                                <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                    <label for="Name" class="mr-2">Tên danh mục:</label>
                                </div>
                                <div class="col">
                                    <input name="Name" class="form-control" required placeholder="" />
                                </div>
                            </div>

                            <div class="row row-cols-2 mb-3">
                                <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                    <label for="Status" class="mr-2">Sản phẩm</label>
                                </div>
                                <div class="col">
                                    <select name="Status" class="form-control" required>
                                        <option value="" disabled selected>Chọn Laptop</option>
                                        <option value="Pradator">Pradator</option>
                                        <option value="Acer Nitro 5">Acer Nitro 5</option>
                                        <option value="Gigabyte">Gigabyte</option>
                                        <option value="Lenovo">Lenovo</option>


                                    </select>
                                </div>
                            </div>


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal update -->
        <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                            Cập nhật danh mục
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body ">
                        <form action="SaveProduct" method="post" enctype="multipart/form-data" class="form-inline">

                            <div class="row row-cols-2 mb-3">
                                <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                    <label for="Name" class="mr-2">Tên danh mục:</label>
                                </div>
                                <div class="col">
                                    <input name="Name" class="form-control" required placeholder="" />
                                </div>
                            </div>

                            <div class="row row-cols-2 mb-3">
                                <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                    <label for="Status" class="mr-2">Sản phẩm</label>
                                </div>
                                <div class="col">
                                    <select name="Status" class="form-control" required>
                                        <option value="" disabled selected>Chọn Laptop</option>
                                        <option value="Pradator">Pradator</option>
                                        <option value="Acer Nitro 5">Acer Nitro 5</option>
                                        <option value="Gigabyte">Gigabyte</option>
                                        <option value="Lenovo">Lenovo</option>


                                    </select>
                                </div>
                            </div>


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Tên danh mục  </th>
                    <th>Danh sách sản phẩm có thuộc danh mục</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Acer</td>
                    <td>
                        <p>
                            Pradator
                        </p>
                        <p>
                            Gigabyte MD3
                        </p>
                        <p>Nitro 5</p>
                    </td>

                    <td>
                        <button class="btn btn-primary btn-sm deleteButton" data-bs-toggle="modal" data-bs-target="#modal2">Cập nhật</button>
                        <button class="btn btn-primary btn-sm deleteButton">Hủy</button>
                    </td>
                </tr>
                <tr>
                    <td>Gygabyte</td>
                    <td>
                        <p>
                            Gigabyte MD3
                        </p>

                    </td>

                    <td>
                        <button class="btn btn-primary btn-sm deleteButton" data-bs-toggle="modal" data-bs-target="#modal2">Cập nhật</button>
                        <button class="btn btn-primary btn-sm deleteButton">Hủy</button>
                    </td>
                </tr>
                <tr>
                    <td>Leveno</td>
                    <td>
                        <p>
                            Laptop Leveno
                        </p>

                    </td>

                    <td>
                        <button class="btn btn-primary btn-sm deleteButton" data-bs-toggle="modal" data-bs-target="#modal2">Cập nhật</button>
                        <button class="btn btn-primary btn-sm deleteButton">Hủy</button>
                    </td>
                </tr>
                <tr>
                    <td>Hp</td>
                    <td>
                        <p>
                            Laptop Hp
                        </p>

                    </td>

                    <td>
                        <button class="btn btn-primary btn-sm deleteButton" data-bs-toggle="modal" data-bs-target="#modal2">Cập nhật</button>
                        <button class="btn btn-primary btn-sm deleteButton">Hủy</button>
                    </td>
                </tr>
                
            </tbody>
        </table>
    </section>



</div>


<style>
    #main {
        position: absolute;
        top: 69px;
        /* Khoảng cách từ trên xuống */
        bottom: 0;
        /* Chiều cao sẽ chiếm đến cuối trang */
        left: 0;
        /* Khoảng cách từ bên trái sang */
        right: 0;
        /* Khoảng cách từ bên phải sang */
        padding-left: 10px;
        font-family: var(--bs-font-monospace);
        color: #012970;
        text-overflow: ellipsis;
        text-decoration: none;
    }
</style>
