@{
  Layout = "~/Views/Shared/_Adminlayout.cshtml";
  ViewData["Title"] = "Admin - Settings";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/apexcharts@3.27.3/dist/apexcharts.min.css">
<!-- Bao gồm tệp JavaScript của ApexCharts -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts@3.27.3/dist/apexcharts.min.js"></script>

<section id="main" class="" style=" position:absolute ;margin-top:60; ">
  @* <div class="cointainer " style="height: 50px ; ">
  <h1 class="">Dashboard</h1>
  <ul class="breadcrumb">
  <li class="breadcrumb-item"><a href="index.html" style="text-decoration: none; color: #cccccc;">Home</a></li>
  <li class="breadcrumb-item active">Dashboard</li>
  </ul>
  </div> *@
  <!-- End Page Title -->

  <div class="container" style="margin-left: 0 ;">
    <div class="row">
      <!-- Left side columns -->
      <div class="col-lg-12">

        <div class="container my-2">
          <form>
            <div class="row mb-3">
              <label for="startDate" class="col-2 col-form-label">Ngày bắt đầu:</label>
              <div class="col-sm-3">
                <input type="date" class="form-control" id="startDate" name="startDate" required>
              </div>
              <label for="endDate" class="col-2 col-form-label">Ngày kết thúc:</label>
              <div class="col-sm-3">
                <input type="date" class="form-control" id="endDate" name="endDate" required>
              </div>
              <div class="col">
                 <a class="btn btn-primary" type="submit" href="">Phân tích</a>
                 </div>
            </div>
          </form>
        </div>





        <div class="row">

          <!-- Sales Card -->
          <div class="col-4">
            <div class="card info-card sales-card">
              <div class="card-body">
                <h5 class="card-title">Bán hàng <span>| Hôm nay</span></h5>

                <div class="filter text-end ">
                  <a class="icon" href="#" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="d-flex align-items-center">
                  <div class="card-icon rounded-circle d-flex align-items-center justify-content-center"
                    style="width: 55px; height:55px; background-color:rgb(239, 239, 239);">
                    <i class="fa-solid fa-cart-shopping fa-2x" style="color: rgb(77, 185, 247); "></i>
                  </div>
                  <div class="ps-3">
                    <h6>145</h6>
                    <span class="text-success small pt-1 fw-bold">12%</span> <span
                      class="text-muted small pt-2 ps-1">Tăng</span>

                  </div>
                </div>
              </div>

            </div>
          </div><!-- End Sales Card -->

          <!-- Revenue Card -->
          <div class="col-4">
            <div class="card info-card revenue-card">



              <div class="card-body">
                <h5 class="card-title">Doanh thu <span>| Tháng này</span></h5>

                <div class="filter text-end ">
                  <a class="icon" href="#" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="d-flex align-items-center ">
                  <div class="card-icon rounded-circle d-flex align-items-center justify-content-center"
                    style="width: 55px; height:55px; background-color:rgb(209, 255, 211);">
                    <i class="fa-solid fa-dollar-sign fa-2x" style="color: rgb(124, 255, 124);"></i>
                  </div>
                  <div class="ps-3">
                    <h6>$3,264</h6>
                    <span class="text-success small pt-1 fw-bold">8%</span> <span
                      class="text-muted small pt-2 ps-1">Tăng</span>

                  </div>
                </div>
              </div>

            </div>
          </div><!-- End Revenue Card -->

          <!-- Customers Card -->
          <div class="col-4">

            <div class="card info-card customers-card">



              <div class="card-body">
                <h5 class="card-title">Khách hàng <span>| Năm này</span></h5>

                <div class="filter text-end ">
                  <a class="icon" href="#" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="d-flex align-items-center">
                  <div class="card-icon rounded-circle d-flex align-items-center justify-content-center"
                    style="width: 55px; height:55px; background-color:rgb(242, 208, 166); ">
                    <i class="fa-solid fa-user-group fa-2x" style="color: rgb(255, 137, 90);"></i>
                  </div>
                  <div class="ps-3">
                    <h6>1244</h6>
                    <span class="text-danger small pt-1 fw-bold">12%</span> <span
                      class="text-muted small pt-2 ps-1">Giảm</span>

                  </div>
                </div>

              </div>
            </div>

          </div><!-- End Customers Card -->

        </div>
      </div>
    </div>

    <!-- Reports -->
    <section class="row ">
      <div class="col-8 mt-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Báo cáo<span>/Hôm nay</span></h5>

            <!-- Line Chart -->
            <div id="reportsChart"></div>

            <script>
              document.addEventListener("DOMContentLoaded", () => {
                new ApexCharts(document.querySelector("#reportsChart"), {
                  series: [{
                    name: 'Sales',
                    data: [31, 40, 28, 51, 42, 82, 56],
                  }, {
                    name: 'Revenue',
                    data: [11, 32, 45, 32, 34, 52, 41]
                  }, {
                    name: 'Customers',
                    data: [15, 11, 32, 18, 9, 24, 11]
                  }],
                  chart: {
                    height: 350,
                    type: 'area',
                    toolbar: {
                      show: false
                    },
                  },
                  markers: {
                    size: 4
                  },
                  colors: ['#4154f1', '#2eca6a', '#ff771d'],
                  fill: {
                    type: "gradient",
                    gradient: {
                      shadeIntensity: 1,
                      opacityFrom: 0.3,
                      opacityTo: 0.4,
                      stops: [0, 90, 100]
                    }
                  },
                  dataLabels: {
                    enabled: false
                  },
                  stroke: {
                    curve: 'smooth',
                    width: 2
                  },
                  xaxis: {
                    type: 'datetime',
                    categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
                  },
                  tooltip: {
                    x: {
                      format: 'dd/MM/yy HH:mm'
                    },
                  }
                }).render();
              });
            </script>
            <!-- End Line Chart -->

          </div>

        </div>


      </div><!-- End Reports -->

      <!-- News & Updates Traffic -->
      <div class="card col-4 mt-3">

        <div class="card-body pb-0 mb-3">
          <h5 class="card-title">News &amp; Updates <span>| Today</span></h5>

          <div class="news ">
            <div class="card post-item clearfix">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="~/assets/img/messages-1.jpg" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h4 class="card-title"><a href="#">Nihil blanditiis at in nihil autem</a></h4>
                    <p class="card-text">Sit recusandae non aspernatur laboriosam. Quia enim eligendi sed ut harum...
                    </p>
                  </div>
                </div>
              </div>
            </div>


            <div class="card post-item clearfix mt-2">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="~/assets/img/messages-2.jpg" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h4 class="card-title"><a href="#">Quidem autem et impedit</a></h4>
                    <p class="card-text">Illo nemo neque maiores vitae officiis cum eum turos elan dries werona nande...
                    </p>
                  </div>
                </div>
              </div>
            </div>


          </div><!-- End sidebar recent posts-->

        </div>
      </div><!-- End News & Updates -->
    </section>









  </div>

</section>

