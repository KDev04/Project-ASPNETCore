@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - Settings";
}


<section style="position: absolute;" id="main">
    <form class="my-2">
        <div class="row">
            <div class="col-8">
                <input class="form-control" type="search" id="SearchLabel" placeholder="Tìm kiếm">
            </div>
            <div class="col">
                <a class="btn btn-outline-secondary" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </a>
            </div>

            <div class="col text-end">
                <a class="btn btn-outline-secondary text-uppercase" data-bs-toggle="modal" data-bs-target="#orderModal">
                    <i class="fa-solid fa-circle-plus" style="color: #74C0FC;"></i> Thêm
                </a>
            </div>

            <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm mới phiếu </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body ">
                            <form action="SaveProduct" method="post" enctype="multipart/form-data" class="form-inline">
                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Name" class="mr-2">Tên mã  *:</label>
                                    </div>
                                    <div class="col">
                                        <input name="Name" class="form-control" required>
                                    </div>
                                </div>


                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Name" class="mr-2">Loại mã  *:</label>
                                    </div>
                                    <div class="col">
                                        <input name="Name" class="form-control" required>
                                    </div>
                                </div>

                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Quantity" class="mr-2">Giá trị *:</label>
                                    </div>
                                    <div class="col">
                                        <input name="Quantity" type="number" class="form-control">
                                    </div>
                                </div>

                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Name" class="mr-2">Số lượng*:</label>
                                    </div>
                                    <div class="col">
                                        <input name="Name" class="form-control" required>
                                    </div>
                                </div>

                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Name" class="mr-2">Ngày hết hạn :</label>
                                    </div>
                                    <div class="col">
                                        <input name="Name" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row row-cols-2 mb-3">
                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                        <label for="Price" class="mr-2">Trạng thái :</label>
                                    </div>
                                    <div class="col">
                                        <input name="Price" type="number" class="form-control" required>
                                    </div>
                                </div>

                            </form>
                            <div id="required-message" class="alert alert-danger"> * Bắt buộc nhập </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>


    

       
