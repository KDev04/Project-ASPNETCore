@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - Laptops ";
    // Định nghĩa số sản phẩm trên mỗi trang và trang hiện tại

}
@model List<Laptop>

<section id="main" style="position: absolute;  margin-top:60">
    <p id="errorMessage" class="text-center text-success bg-black">@ViewBag.ErrorMessage</p>

    <partial name="~/Views/Component/SearchAndAdd.cshtml" />
    <table class="table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                @* <th>Số lượng tồn kho</th> *@
                <th>Ảnh minh họa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var laptop in Model)
            {
                <tr>
                    <td style="word-break: break-all;">@Html.Raw(laptop.Name)</td>
                    <td style="word-break: break-all;">@laptop.Price</td>
                    @* <td style="word-break: break-all;">@laptop.Quantity</td> *@
                    <td style="word-break: break-all;">
                        <img src="http://localhost:4000/@laptop.ImgPath" alt="Laptop Image"
                            style="width: 100px; height: 100px;">
                    </td>

                    <td>
                        <div style="display: flex; gap: 8px;" class=" p-3 ">
                            @* <form method="post" asp-action="UpdateLaptop" asp-route-LaptopId=@laptop.LaptopId ></form>
                        <button class="btn btn-primary btn-sm" type="submit">Cập nhật</button>
                        </form> *@

                            <!-- Form update-->
                            <form>
                                <!-- Nút để mở modal -->
                                <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="modal"
                                    data-bs-target="#myModal">
                                    Cập nhật
                                </button>
                            </form>


                            <!-- Modal update -->
                            <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Cập nhật laptop ID</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>

                                        <div class="modal-body ">
                                            <form action="SaveProduct" method="post" enctype="multipart/form-data"
                                                class="form-inline">

                                                <div class="row row-cols-2 mb-3">
                                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                                        <label for="Name" class="mr-2">Tên Laptop:</label>
                                                    </div>
                                                    <div class="col">
                                                        <input name="Name" class="form-control" required>
                                                    </div>
                                                </div>
                                                <div class="row row-cols-2 mb-3">
                                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                                        <label for="Price" class="mr-2">Giá:</label>
                                                    </div>
                                                    <div class="col">
                                                        <input name="Price" type="number" class="form-control" required>
                                                    </div>
                                                </div>
                                                <div class="row row-cols-2 mb-3">
                                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                                        <label for="Quantity" class="mr-2">Số lượng kho:</label>
                                                    </div>
                                                    <div class="col">
                                                        <input name="Quantity" type="number" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="row row-cols-2 mb-3">
                                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                                        <label for="Image" class="mr-2">Ảnh:</label>
                                                    </div>
                                                    <div class="col">
                                                        <input name="Image" type="file" class="form-control-file" required>
                                                    </div>
                                                </div>
                                                <div class="row row-cols-2 mb-3">
                                                    <div class="col-6 col-sm-2 offset-md-2 d-flex align-items-center">
                                                        <label for="Description" class="mr-2">Mô tả</label>
                                                    </div>
                                                    <div class="col">
                                                        <input name="Description" class="form-control" required>
                                                    </div>
                                                </div>
                                                @* <div class="row text-center">
                                            <div class="col">
                                            <button type="submit" class="btn btn-primary">Tạo mới Laptop</button>
                                            </div>
                                            </div> *@
                                            </form>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Modal delete -->
                            <form method="post" asp-action="DeleteLaptop" asp-controller="Admin"
                                asp-route-LaptopId="@laptop.LaptopId" onsubmit="return confirmDelete();">
                                <button class="btn btn-primary btn-sm" type="submit">Xóa</button>
                            </form>
                            <script>
                                function confirmDelete() {
                                    return confirm("Bạn có chắc chắn muốn xóa sản phẩm này?");
                                }
                            </script>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<style>
    #main {
        position: absolute;
        top: 69px;
        /* Khoảng cách từ trên xuống */
        bottom: 0;
        /* Chiều cao sẽ chiếm đến cuối trang */
        left: 0;
        /* Khoảng cách từ bên trái sang */
        right: 0;
        /* Khoảng cách từ bên phải sang */
        padding-left: 10px;
        font-family: var(--bs-font-monospace);
        color: #012970;
        text-overflow: ellipsis;
        text-decoration: none;
    }
</style>