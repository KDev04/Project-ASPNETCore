@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - Laptops ";
}
@model List<Laptop>

<section id="main" style="position: absolute;  margin-top:60">
    <p id="errorMessage" class="text-center text-success bg-black">@ViewBag.ErrorMessage</p>

    <partial name="~/Views/Component/SearchAndAdd.cshtml" />
    <table class="table table-striped table-bordered " >
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng tồn kho</th>
                <th>Ảnh minh họa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var laptop in Model)
            {
                <tr>
                    <td style="word-break: break-all;">@Html.Raw(laptop.Name)</td>
                    <td style="word-break: break-all;">@laptop.Price</td>
                    <td style="word-break: break-all;">@laptop.Quantity</td>
                    <td style="word-break: break-all;">
                        <img src="http://localhost:4000/@laptop.ImgPath" alt="Laptop Image"
                            style="width: 100px; height: 100px;">
                    </td>
                    <td>
                        <div style="display: flex; gap: 8px;" class=" p-3 ">
                            <form method="post" asp-action="UpdateLaptop" asp-route-LaptopId=@laptop.LaptopId>
                                <button class="btn btn-primary btn-sm" type="submit">Cập nhật</button>
                            </form>
                        </div>
                         <form method="post" asp-action="DeleteLaptop" asp-controller="Admin"
                                asp-route-LaptopId="@laptop.LaptopId" class="">
                                <button class="btn btn-primary btn-sm" type="submit">Xóa Laptop</button>
                            </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<style>
  #main {
    position: absolute;
    top: 69px;
    /* Khoảng cách từ trên xuống */
    bottom: 0;
    /* Chiều cao sẽ chiếm đến cuối trang */
    left: 0;
    /* Khoảng cách từ bên trái sang */
    right: 0;
    /* Khoảng cách từ bên phải sang */
    padding-left: 10px;
    font-family: var(--bs-font-monospace);
    color: #012970;
    text-overflow: ellipsis;
    text-decoration: none;
  }
</style>