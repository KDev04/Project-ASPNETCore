@model List<User>
@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin- Users";

}
<section id="main" style="position: absolute; ">
    @* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Hiển thị thông báo
            $('.alert').show();

